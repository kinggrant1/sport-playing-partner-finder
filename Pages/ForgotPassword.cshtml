@page
@model MyWebApp.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}
@{
    var successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <script>
        window.onload = function() {
            // show the success message for login/signup
            alert("@successMessage");
        };
    </script>
}

<head>
    <link rel="stylesheet" href="~/css/Login.css">
</head>

<h1>Forgot Password</h1>

<div class="container">
    <p>Enter your email address below, and we'll send you a code to reset your password.</p>

    <form method="post" asp-page-handler="SendResetLink">
        <input type="email" asp-for="email" placeholder="Your email address" required />
        <input type="submit" value="Send Reset Link" />
    </form>

    <div>
        <a asp-page="/Login">Login</a>
        </div>
</div>

